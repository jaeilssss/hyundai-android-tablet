<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@color/keypad_bg"
    android:padding="10dp"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="10dp"
    android:text="해당 커스텀 모드를 삭제하시겠습니까?"
    android:textColor="@color/white"
    android:textSize="20dp"
    android:id="@+id/custom_title"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/custom_cancel"
        app:layout_constraintTop_toBottomOf="@id/custom_title"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:text="삭제"
        android:textColor="@color/white"
        android:background="@drawable/button_click"
        android:textSize="16dp"
        android:id="@+id/custom_delete"
        android:layout_marginRight="6dp"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@id/custom_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_title"
        android:layout_marginTop="20dp"
        android:id="@+id/custom_cancel"
        android:layout_marginLeft="6dp"
        android:background="@drawable/button_click"
        android:text="취소"
        android:textSize="16dp"
        android:textColor="@color/white"/>
</android.support.constraint.ConstraintLayout>