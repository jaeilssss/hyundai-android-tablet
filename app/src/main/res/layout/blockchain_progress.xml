<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/step_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="201dp"
            android:layout_marginEnd="350dp"
            android:background="@drawable/step_01_off" />

        <ImageView
            android:id="@+id/step_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="264dp"
            android:layout_marginEnd="265dp"
            android:background="@drawable/step_02_off" />

        <ImageView
            android:id="@+id/step_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/step_center"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-55dp"
            android:layout_marginEnd="299dp"
            android:background="@drawable/step_03_off" />

        <ImageView
            android:id="@+id/step_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/step_center"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-64dp"
            android:layout_marginEnd="517dp"
            android:background="@drawable/step_04_off" />

        <ImageView
            android:id="@+id/step_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/step_center"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-169dp"
            android:layout_marginEnd="547dp"
            android:background="@drawable/step_05_off" />

        <ImageView
            android:id="@+id/step_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/step_center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:textColor="#000"
                android:text="진행률"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tv_blockchain_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32dp"
                    android:textColor="#0075ae"
                    android:text="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textColor="#0075ae"
                    android:text="%"/>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
