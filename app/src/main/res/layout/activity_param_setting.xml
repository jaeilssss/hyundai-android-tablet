                        android:id="@+id/sound_back_sensitive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="ON"
                        android:textColor="#fff"
                        android:textSize="13dp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="272dp"
                    android:layout_height="28dp"
                    android:layout_marginBottom="9dp"
                    android:background="#14172a">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_point" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text=" 구동축 효과"
                        android:textColor="#fff"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/drive_is_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="ON"
                        android:textColor="@color/mainColor"
                        android:textSize="16dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="272dp"
                    android:layout_height="28dp"
                    android:layout_marginBottom="9dp"
                    android:id="@+id/drive_stiffness_layout"
                    android:background="#14172a">

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/input_shape" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text=" 강성"
                        android:textColor="#fff"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/drive_stiffness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="하"
                        android:textColor="#fff"
                        android:textSize="13dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="265dp"
                    android:layout_height="28dp"
                    android:layout_marginBottom="9dp"
                    android:id="@+id/drive_reduce_layout"
                    android:background="#14172a">

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/input_shape" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text=" 강쇄"
                        android:textColor="#fff"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/drive_reduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="ON"
                        android:textColor="#fff"
                        android:textSize="13dp" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>





            <!-- parameters -->



                <android.support.v4.widget.ContentLoadingProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:progressBarStyleLarge"
                    android:indeterminateTint="@color/mainColor"
                    android:id="@+id/param_setting_loading"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />



            <!-- 버튼 (취소 확인) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="19dp"
                android:background="#10162b"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/ib_cancel_btn"
                    android:layout_width="135dp"
                    android:layout_height="35.7dp"
                    android:text="취소"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:background="@drawable/button_click" />

                <Button
                    android:id="@+id/ib_confirm_btn"
                    android:layout_width="135dp"
                    android:layout_height="35.7dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:text="확인"
                    android:textSize="15dp"
                    android:background="@drawable/button_click" />

            </LinearLayout>

        </LinearLayout>



</RelativeLayout>
