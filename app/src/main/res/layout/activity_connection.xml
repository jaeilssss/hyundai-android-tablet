<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/motor_background"
    tools:context=".view.connectionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="차량과 연결하기"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:id="@+id/top_txt"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="IP"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@id/top_txt"
        app:layout_constraintEnd_toStartOf="@id/ip_edit"
        android:textColor="@color/white"
        android:layout_marginTop="130dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:id="@+id/ip_txt"/>
    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:hint="IP를 입력하세요"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toEndOf="@id/ip_txt"
        app:layout_constraintEnd_toStartOf="@id/connection_btn"
        app:layout_constraintTop_toTopOf="@id/ip_txt"
        app:layout_constraintBottom_toBottomOf="@id/ip_txt"
        android:layout_marginLeft="30dp"
        android:id="@+id/ip_edit"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="연결하기"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@id/ip_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ip_edit"
        app:layout_constraintBottom_toBottomOf="@id/ip_edit"
        android:backgroundTint="@color/white"
        android:textColorHighlight="@color/white"
        android:layout_marginLeft="30dp"
        android:id="@+id/connection_btn"/>

</android.support.constraint.ConstraintLayout>