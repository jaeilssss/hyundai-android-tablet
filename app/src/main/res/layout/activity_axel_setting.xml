<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/motor_background">

    <RelativeLayout
        android:id="@+id/layout_axel_setting_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/ib_axel_setting_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_back"
            android:layout_centerVertical="true"/>

        <!-- 상단 타이틀 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center|right">

            <!-- 나의 설정 -->
            <TextView
                android:id="@+id/ib_favorite_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구동축 설정"
                android:textSize="18dp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="#505C76"
                android:paddingTop="3dp"
                android:paddingBottom="3dp" />

            <!-- OBD 설정 및 상태 -->
            <ImageButton
                android:id="@+id/ib_obd_set_btn"
                android:layout_width="130dp"
                android:layout_height="18dp"
                android:background="@drawable/img_tit_03" />

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="#505C76"
                android:paddingTop="3dp"
                android:paddingBottom="3dp" />

            <ImageView
                android:id="@+id/iv_favorite_light"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ico_light_red"/>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_axel_setting_top"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"

        android:id="@+id/axel_setting_chart_layout">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:layout_above="@id/chart"
            android:id="@+id/axel_setting_img"
            android:background="@drawable/input_sub_shape" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영향도"
            android:textColor="#0075ae"
            android:layout_toEndOf="@id/axel_setting_img"
            android:layout_above="@id/chart"
            android:textSize="18dp" />
        <com.github.mikephil.charting.charts.RadarChart
            android:id="@+id/chart"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            />
        <!--        260dp-->


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/axel_setting_chart_layout"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:id="@+id/axel_detail_setting_img"
            android:background="@drawable/input_sub_shape" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textColor="#0075ae"
            android:id="@+id/axel_detail_setting_txt"
            android:layout_toEndOf="@id/axel_detail_setting_img"
            android:textSize="22dp" />
        <android.support.v7.widget.SwitchCompat
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/axel_detail_setting_txt"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            app:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb_selector"
            android:id="@+id/axel_setting_switch"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/axel_detail_setting_img"
            android:layout_alignLeft="@id/axel_detail_setting_txt"
            android:id="@+id/axel_setting_layout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유형"
            android:textColor="@color/white"
            android:textSize="20dp"

            android:id="@+id/axel_setting_type_txt"
            android:layout_marginTop="70dp"/>



        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/oval_default"
            android:layout_toEndOf="@id/axel_setting_type_txt"
            android:layout_marginTop="70dp"

            android:id="@+id/axel_setting_at_check"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AT"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:id="@+id/axel_setting_at_txt"
            android:layout_toRightOf="@id/axel_setting_at_check"

            android:layout_alignBottom="@id/axel_setting_type_txt"
            android:layout_alignTop="@id/axel_setting_type_txt"
            android:layout_marginLeft="15dp"/>

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/oval_default"
            android:layout_toEndOf="@id/axel_setting_at_txt"

            android:layout_marginTop="70dp"
            android:id="@+id/axel_setting_dct_img"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DCT"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:id="@+id/axel_setting_dct_txt"
            android:layout_toRightOf="@id/axel_setting_dct_img"

            android:layout_alignBottom="@id/axel_setting_type_txt"
            android:layout_alignTop="@id/axel_setting_type_txt"
            android:layout_marginLeft="15dp"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/oval_default"
            android:layout_toEndOf="@id/axel_setting_dct_txt"

            android:layout_marginTop="70dp"
            android:id="@+id/axel_setting_amt_img"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DCT"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_toRightOf="@id/axel_setting_amt_img"

            android:layout_alignBottom="@id/axel_setting_type_txt"
            android:layout_alignTop="@id/axel_setting_type_txt"
            android:layout_marginLeft="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="기어 비"
            android:textColor="@color/white"
            android:layout_below="@id/axel_setting_type_txt"
            android:layout_alignStart="@id/axel_setting_type_txt"
            android:layout_marginTop="70dp"
            android:id="@+id/axel_detail_axel_rate"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/oval_default"
            android:layout_toEndOf="@id/axel_detail_axel_rate"
            android:layout_below="@id/axel_setting_at_check"
            android:layout_marginTop="70dp"
            android:id="@+id/axel_short_img"
            android:layout_marginLeft="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:id="@+id/axel_short_txt"
            android:layout_toRightOf="@id/axel_short_img"
            android:layout_below="@id/axel_setting_at_txt"
            android:layout_alignBottom="@id/axel_detail_axel_rate"
            android:layout_alignTop="@id/axel_detail_axel_rate"
            android:layout_marginLeft="15dp"/>

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/oval_default"
            android:layout_toEndOf="@id/axel_short_txt"
            android:layout_below="@id/axel_setting_dct_img"
            android:layout_marginTop="70dp"
            android:id="@+id/axel_default_img"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:id="@+id/axel_setting_default_txt"
            android:layout_toRightOf="@id/axel_default_img"
            android:layout_below="@id/axel_setting_dct_txt"
            android:layout_alignBottom="@id/axel_detail_axel_rate"
            android:layout_alignTop="@id/axel_detail_axel_rate"
            android:layout_marginLeft="15dp"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/oval_default"
            android:layout_toEndOf="@id/axel_setting_default_txt"
            android:layout_below="@id/axel_setting_amt_img"
            android:layout_marginTop="70dp"
            android:id="@+id/axel_long_img"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Long"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_toRightOf="@id/axel_long_img"
            android:layout_below="@id/axel_setting_amt_img"
            android:layout_alignBottom="@id/axel_detail_axel_rate"
            android:layout_alignTop="@id/axel_detail_axel_rate"
            android:layout_marginLeft="15dp"/>

        </RelativeLayout>
        <Button
            android:layout_width="106.7dp"
            android:layout_height="41dp"
            android:id="@+id/axel_data_send"
            android:layout_below="@id/axel_setting_layout"
            android:background="@drawable/button_shape_radius_10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:text="차로 전송"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </RelativeLayout>
</RelativeLayout>